{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 5,
      "required": true,
      "maxLength": 30,
      "default": "(标题)"
    },
    "text": {
      "type": "richtext",
      "default": "（正文）",
      "required": true,
      "minLength": 100
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "artist": {
      "type": "string",
      "minLength": 3,
      "maxLength": 15,
      "required": true,
      "default": "（作者）"
    },
    "article_tabs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article-tab.article-tab"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
